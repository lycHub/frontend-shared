{
  "name": "@frontend-shared/ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:spa": "vite",
    "dev:ssr": "concurrently \"pnpm build:server:watch\" \"nodemon server/dist/index.js\"",
    "build:server:watch": "tsc -w --project tsconfig.server.json",
    "build:server": "tsc --project tsconfig.server.json",
    "build": "pnpm build:client && pnpm build:ssr && pnpm build:server",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:ssr": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "preview:ssr": "set NODE_ENV=production && node server/dist/index.js",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@react-router/dev": "^7.5.0",
    "@tanstack/react-store": "^0.7.0",
    "html-react-parser": "^5.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/express": "^5.0.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "ejs": "^3.1.10",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "path-to-regexp": "^8.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}